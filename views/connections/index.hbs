<div class="container-fluid">
          <div class="sidebar col-xs-2">
            <h2>Filter Connections</h2>
            <div class="dropdown">
              <button onclick="myFunction()" class="dropbtn">Location</button>
              <div id="myDropdown" class="dropdown-content">
                <a href="#">Austin</a>
                <a href="#">Portland</a>
                <a href="#">San Francisco</a>
                <a href="#">Seattle</a>
              </div>
            </div>
            <div class="dropdown">
              <button onclick="myFunction()" class="dropbtn">Stack</button>
              <div id="myDropdown" class="dropdown-content">
                <a href="#">Front End</a>
                <a href="#">Back End</a>
                <a href="#">Full Stack</a>
              </div>
            </div>
        </div>
      <div class="col-xs-10">
          {{#each users}}
          <div class="col-xs-6"
            data-id="{{ users }}"
            data-category="{{ user_name }} {{ location }} {{ developer_type }} {{ age }} {{ gender }}">
            <div class=" panel panel-default"> <!-- panel default -->
              <div class="panel-body text-center"> <!-- panel body -->
                <div class="col-xs-6">
                  <a href="/connections/{{ this.id }}">
                    <img class= "img-circle" src="{{img_url}}" alt={{user_name}} width="250">
                  </a>
                </div>
                <div class="col-xs-6 text-center">
                  <h4 class="index-username"><strong>{{user_name}}</strong></h4>
                  <p class="index-info">{{location}}</p>
                  <p class="index-info">{{developer_type}}</p>
                  <p class="index-info">{{age}}</p>
                  <p class="index-info">{{gender}}</p>
                </div>
              </div>
              </div>
            </div>
          {{/each}}
  </div>
</div>
